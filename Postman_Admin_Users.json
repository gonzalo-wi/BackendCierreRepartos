{
	"info": {
		"name": "Admin Users Management",
		"description": "Gestión de usuarios para SuperAdmin",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8001",
			"type": "string"
		},
		{
			"key": "superadmin_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Login SuperAdmin",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"admin123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/fix/login",
					"host": ["{{base_url}}"],
					"path": ["api", "fix", "login"]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"  const response = pm.response.json();",
							"  pm.collectionVariables.set('superadmin_token', response.access_token);",
							"  console.log('Token guardado: ' + response.access_token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "2. Obtener Todos los Usuarios",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/users/",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", ""]
				}
			}
		},
		{
			"name": "3. Crear Usuario - Admin",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"admin_usuario\",\n  \"email\": \"admin@empresa.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"Administrador Principal\",\n  \"role\": \"ADMIN\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/users/",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", ""]
				}
			}
		},
		{
			"name": "4. Crear Usuario - Usuario Normal",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"usuario_normal\",\n  \"email\": \"usuario@empresa.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"Usuario de Consulta\",\n  \"role\": \"USUARIO\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/users/",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", ""]
				}
			}
		},
		{
			"name": "5. Actualizar Usuario",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"nuevo_email@empresa.com\",\n  \"full_name\": \"Nuevo Nombre Completo\",\n  \"role\": \"ADMIN\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/users/2",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", "2"]
				}
			}
		},
		{
			"name": "6. Cambiar Contraseña",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"user_id\": 2,\n  \"new_password\": \"nueva_password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/users/change-password",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", "change-password"]
				}
			}
		},
		{
			"name": "7. Activar/Desactivar Usuario",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/users/2/toggle-status",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", "2", "toggle-status"]
				}
			}
		},
		{
			"name": "8. Eliminar Usuario",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/users/3",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", "3"]
				}
			}
		},
		{
			"name": "9. Obtener Roles Disponibles",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/users/roles",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "users", "roles"]
				}
			}
		}
	]
}
