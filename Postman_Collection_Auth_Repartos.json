{
	"info": {
		"name": "Sistema Cierre Repartos + Auth",
		"description": "API completa con autenticaci√≥n y cierre de repartos",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "üîê AUTH",
			"item": [
				{
					"name": "1. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('token', response.access_token);",
									"    console.log('Token guardado:', response.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"admin123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						}
					}
				},
				{
					"name": "2. Mi informaci√≥n",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "me"]
						}
					}
				},
				{
					"name": "3. Crear usuario (SuperAdmin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"nuevo_admin\",\n  \"email\": \"admin2@empresa.com\",\n  \"password\": \"admin123\",\n  \"full_name\": \"Nuevo Administrador\",\n  \"role\": \"ADMIN\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "users"]
						}
					}
				}
			]
		},
		{
			"name": "üèÅ CIERRE REPARTOS",
			"item": [
				{
					"name": "1. Ver fechas disponibles",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/reparto-cierre/resumen-por-fechas",
							"host": ["{{baseUrl}}"],
							"path": ["api", "reparto-cierre", "resumen-por-fechas"]
						}
					}
				},
				{
					"name": "2. üöÄ CERRAR REPARTOS",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fecha_especifica\": \"2025-07-23\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/reparto-cierre/cerrar-repartos",
							"host": ["{{baseUrl}}"],
							"path": ["api", "reparto-cierre", "cerrar-repartos"]
						}
					}
				}
			]
		}
	]
}
