{
	"info": {
		"name": "Debug Auth + Repartos",
		"description": "API con debug para resolver problemas de autenticación",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "🔧 DEBUG",
			"item": [
				{
					"name": "1. Test Auth Setup",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/debug/test-auth",
							"host": ["{{baseUrl}}"],
							"path": ["api", "debug", "test-auth"]
						},
						"description": "Verifica la configuración de autenticación y crea usuario si es necesario"
					}
				},
				{
					"name": "2. Test Login Process",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/debug/test-login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "debug", "test-login"]
						},
						"description": "Prueba el proceso de login y muestra errores detallados"
					}
				}
			]
		},
		{
			"name": "🔐 AUTH",
			"item": [
				{
					"name": "1. Login Real",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('token', response.access_token);",
									"    console.log('Token guardado');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"admin123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						}
					}
				},
				{
					"name": "2. Mi Información",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "me"]
						}
					}
				}
			]
		},
		{
			"name": "🏁 REPARTOS",
			"item": [
				{
					"name": "1. Ver Fechas",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/reparto-cierre/resumen-por-fechas",
							"host": ["{{baseUrl}}"],
							"path": ["api", "reparto-cierre", "resumen-por-fechas"]
						}
					}
				},
				{
					"name": "2. 🚀 Cerrar Repartos",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fecha_especifica\": \"2025-07-23\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/reparto-cierre/cerrar-repartos",
							"host": ["{{baseUrl}}"],
							"path": ["api", "reparto-cierre", "cerrar-repartos"]
						}
					}
				}
			]
		}
	]
}
